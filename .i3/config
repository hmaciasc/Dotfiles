exec_always --no-startup-id dunst -config ~/.i3/dunstrc
exec --no-startup-id xrandr --output HDMI2 --off --output HDMI1 --mode 1920x1080 --pos 0x0 --rotate normal --output VIRTUAL1 --off --output VGA1 --off

# Dual screen
bindsym $mod+Shift+h exec xrandr --output HDMI2 --off --output HDMI1 --mode 1920x1080 --pos 0x0 --rotate normal --output VIRTUAL1 --off --output VGA1 --mode 1280x768 --pos 1920x0 --rotate normal

# Single screen
bindsym $mod+Shift+g exec --no-startup-id xrandr --output HDMI2 --off --output HDMI1 --mode 1920x1080 --pos 0x0 --rotate normal --output VIRTUAL1 --off --output VGA1 --off

exec --no-startup-id i3-msg 'exec google-chrome-stable'
workspace "3" output HDMI1
workspace "2 " output HDMI1
workspace "1 " output VGA1

# switching between workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

